{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Easy Call AI",
  "version": "0.2.0",
  "identifier": "ai.easycall.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Easy Call AI - 配置窗口",
        "width": 400,
        "height": 620,
        "dragDropEnabled": false,
        "resizable": true,
        "visible": false,
        "decorations": false,
        "shadow": true
      },
      {
        "label": "chat",
        "title": "Easy Call AI - 对话窗口",
        "width": 420,
        "height": 700,
        "dragDropEnabled": false,
        "resizable": true,
        "visible": false,
        "decorations": false,
        "shadow": true
      },
      {
        "label": "archives",
        "title": "Easy Call AI - 归档窗口",
        "width": 520,
        "height": 720,
        "dragDropEnabled": false,
        "resizable": true,
        "visible": false,
        "decorations": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico"
    ],
    "targets": "all"
  }
}
